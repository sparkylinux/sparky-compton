#!/bin/bash

# Created by Pawe≈Ç "pavroo" Pijanowski 2013/10/12
# Copyright 2013-2018 under the GNU GPL2 License
# This script requires yad to run
# Last update 2018/10/28 by pavroo

# get default's locale file
DEFLOCDIR="/usr/share/sparky/sparky-compton"
if [ "`cat /etc/default/locale | grep es`" != "" ]; then
. $DEFLOCDIR/es
elif [ "`cat /etc/default/locale | grep fr`" != "" ]; then
. $DEFLOCDIR/fr
elif [ "`cat /etc/default/locale | grep id_ID`" != "" ]; then
. $DEFLOCDIR/id_ID
elif [ "`cat /etc/default/locale | grep it`" != "" ]; then
. $DEFLOCDIR/it
elif [ "`cat /etc/default/locale | grep ja_JP`" != "" ]; then
. $DEFLOCDIR/ja
elif [ "`cat /etc/default/locale | grep pl`" != "" ]; then
. $DEFLOCDIR/pl
elif [ "`cat /etc/default/locale | grep pt_BR`" != "" ]; then
. $DEFLOCDIR/pt_BR
elif [ "`cat /etc/default/locale | grep pt_PT`" != "" ]; then
. $DEFLOCDIR/pt_PT
elif [ "`cat /etc/default/locale | grep ru`" != "" ]; then
. $DEFLOCDIR/ru
elif [ "`cat /etc/default/locale | grep sv_SE`" != "" ]; then
. $DEFLOCDIR/se
else
. $DEFLOCDIR/en
fi

DIALOG="yad --window-icon=preferences-desktop-theme --width=500 --height=320 --center"
TITLE="--always-print-result --dialog-sep --image=preferences-desktop-theme --title="
TEXT="--text="
MENU="--list --column=$LOCAL1 --column=$LOCAL2"
OKEXIT="--button=Ok:0 --button=$LOCAL3:1"
TITLETEXT="$LOCAL4"
if [ -f /usr/bin/sparky-editor ]; then
	SPARKYEDITOR="sparky-editor"
else
	SPARKYEDITOR="gnome-text-editor"
fi

mainmenu () {
CHOICES=`$DIALOG $TITLE"$TITLETEXT" $MENU $OKEXIT $TEXT"$LOCAL5:" \
Start "$LOCAL6" \
Stop "$LOCAL7" \
Load "$LOCAL8" \
Edit "$LOCAL9" \
GUIconf "$LOCAL10"`

if [ "$?" = "0" ]; then
	CHOICE=`echo $CHOICES | cut -d "|" -f 1`
else
	exit 0
fi

if [ "$CHOICE" = "Start" ]; then
	compton &
	mainmenu
elif [ "$CHOICE" = "Stop" ]; then
	killall -9 compton &
	mainmenu
elif [ "$CHOICE" = "Load" ]; then
	if [ -f $HOME/.compton.conf ]; then
		mv $HOME/.compton.conf $HOME/.config/compton.conf
	fi

	if [ -f $HOME/.config/compton.conf ]; then
		cp $HOME/.config/compton.conf $HOME/.config/compton-backup-$(date +"%m_%d_%Y").conf
		rm -f $HOME/.config/compton.conf
	fi

	cp -f /opt/sparky/compton.conf $HOME/.config/compton.conf
	mainmenu
elif [ "$CHOICE" = "Edit" ]; then
	if [ -f $HOME/.compton.conf ]; then
		mv $HOME/.compton.conf $HOME/.config/compton.conf
	fi
	$SPARKYEDITOR $HOME/.config/compton.conf
	mainmenu
elif [ "$CHOICE" = "GUIconf" ]; then
	compton-conf
	mainmenu
else
	exit 0
fi
}

mainmenu
